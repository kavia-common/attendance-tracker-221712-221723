# Firebase Web/App configuration (used by frontend and local seeding)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=your-web-api-key
FIREBASE_APP_ID=your-app-id
FIREBASE_MESSAGING_SENDER_ID=000000000000
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# When true, seeders/clients should connect to the local emulator suite
USE_FIREBASE_EMULATOR=true

# Optional: Emulator host overrides (defaults used by firebase.json)
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_DATABASE_EMULATOR_HOST=localhost:9000
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199
FIREBASE_EMULATOR_UI_HOST=localhost:4000
